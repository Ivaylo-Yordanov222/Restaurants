@model CategoryBindingModel
<form id="Update_@Model.Id" method="post">
    <button type="button" class="close" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
        <input type="hidden" value="@Model.Name" />
        <div class="form-row">
            <div class="form-group col-md-4">
                <input asp-for="Name" type='text' class='form-control' value="@Model.Name">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group col-md-2">
                <button class="btn btn-light" type="submit">
                    <span id="spanUpdate_@Model.Id" class="spinner-grow spinner-grow-sm" role="status" aria-hidden="true" style="display:none"></span>
                    <span class="sr-only">Loading...</span>
                    Update
                </button>
            </div>
        </div>
</form>