<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin zone</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/admin.css" rel="stylesheet" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-xl navbar-toggleable-sm navbar-light pb-0 pt-0 bg-dark border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand p-0 m-0" asp-area="" asp-controller="Home" asp-action="Index"><img width="175" height="50" src="~/Images/loStab_logo.png" /></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-xl-inline-flex flex-xl-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="@BussinessLogicConstants.AdminArea" asp-controller="Home" asp-action="Index">Stats</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="@BussinessLogicConstants.AdminArea" asp-controller="Category" asp-action="Index">Categories</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="@BussinessLogicConstants.AdminArea" asp-controller="Products" asp-action="Add">Add Product</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="@BussinessLogicConstants.AdminArea" asp-controller="Users" asp-action="Index">Users</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="@BussinessLogicConstants.AdminArea" asp-controller="Users" asp-action="Add">Add User</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="@BussinessLogicConstants.AdminArea" asp-controller="Preferences" asp-action="Index">Preferences</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
      <partial name="_MessagesPartial" />
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer bg-dark text-center text-white">
        
            <div class="container">
                <div class="row">
                    <div class="col-xl-9 text-center">
                        &copy; 2021 - Lo stabilimento - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </div>
                    <div class="col-xl-3">
                        <partial name="_selectLanguagePartial" />
                    </div>
                </div>
            </div>
        
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @RenderSection("Scripts", required: false)
</body>
</html>
