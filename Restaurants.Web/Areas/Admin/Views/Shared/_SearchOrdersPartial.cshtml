@model ICollection<OrderConciseViewModel>
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@{
    ViewData["Title"] = "Search";
    string searchType = this.ViewData["searchType"] as string;
}
<div class="col-md-12 customDivs2">
    <h4 class="text-lg-center text-md-center text-dark bg-light">@searchType</h4>
    <button type="button" class="close" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h5>Results found: @Model.Count</h5>
    <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="btn btn-dark">Search again</a>
    <table class="table table-hover table-responsive-lg w-auto small">
        <thead>
            <tr>
                <th scope="col">Order Id</th>
                <th scope="col">Username</th>
                <th scope="col">Start</th>
                <th scope="col">Delivered</th>
                <th scope="col">Finished</th>
                <th scope="col">Price</th>
                <th scope="col">Promo Price</th>
                <th scope="col">Discount</th>
                <th scope="col">View info</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.UserName</td>
                    <td>@order.StartTime</td>
                    <td>@order.DeliverTime</td>
                    <td>@order.EndTime</td>
                    <td>@order.Price</td>
                    <td>@order.PromotionPrice</td>
                    <td>@order.Discount %</td>
                    <td>
                        <partial name="_FormViewOrderPartial" model="@order" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>