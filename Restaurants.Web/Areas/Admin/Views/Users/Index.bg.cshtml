@model IEnumerable<UsersViewModel>
@{
    ViewData["Title"] = "Потребители";
}

<h1 class="text-lg-center text-md-center text-dark bg-light">Потребители</h1>
<a class="btn btn-dark text-light text-md-center col-sm-2 row"
   asp-area="Admin" asp-controller="Users" asp-action="Add">
    Добави потребител
</a>
|
<br />
<br />
<div class="customDivs">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Потребителско име</th>
                <th scope="col">Имейл</th>
                <th scope="col">Роля</th>
                <th scope="col">Изтриване</th>
            </tr>
        </thead>
        <tbody>
            @Html.DisplayForModel()
        </tbody>
    </table>
</div>
