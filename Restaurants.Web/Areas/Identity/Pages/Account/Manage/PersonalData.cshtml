@page
@model PersonalDataModel
@inject IStringLocalizer<ValidationResources> localizer
@{
    ViewData["Title"] = localizer[BussinessLogicConstants.PersonalDataMessage];
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
        <p>@localizer[BussinessLogicConstants.PersonalDataWarningMessage]</p>
        <p>
            <strong>@localizer[BussinessLogicConstants.DeletingPersonalDataWarningMessage]</strong>
        </p>
        <form id="download-data" asp-page="DownloadPersonalData" method="post" class="form-group">
            <button class="btn btn-primary" type="submit">@localizer[BussinessLogicConstants.DownloadMessage]</button>
        </form>
        <p>
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-primary">@localizer[BussinessLogicConstants.DeleteMessage]</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}