@using Microsoft.Extensions.Localization
@using Restaurants.Common.Resources
@inject IStringLocalizer<ValidationResources> localizer 
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Lo stabilimento</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/lib/fontawesome-free-5.13.0-web/fontawesome-free-5.13.0-web/css/all.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/searchstyle.css" rel="stylesheet" />
    <link href="~/css/bulbs.css" rel="stylesheet" />
    <link href="~/css/loaderWin10.css" rel="stylesheet" />
</head>
<body>
    <header>
        @**@
        <nav class="navbar navbar-expand-xl navbar-toggleable-lg navbar-light pb-0 pt-0 bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand p-0 m-0" asp-area="" asp-controller="Home" asp-action="Index"><img width="175" height="50" src="~/Images/loStab_logo.png" /></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-xl-inline-flex flex-xl-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">@localizer[BussinessLogicConstants.HomeMessage]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">@localizer[BussinessLogicConstants.PrivacyMessage]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="MyOrders" asp-action="Index">@localizer[BussinessLogicConstants.MyOrdersMessage]</a>
                        </li>
                        @{
                            if (this.User.IsInRole(BussinessLogicConstants.AdminRole))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="@BussinessLogicConstants.AdminArea" asp-controller="Home" asp-action="Index">@localizer[BussinessLogicConstants.AdminMessage]</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="@BussinessLogicConstants.CookerArea" asp-controller="Home" asp-action="Index">@localizer[BussinessLogicConstants.CookerMessage]</a>
                                </li>
                            }
                            if (this.User.IsInRole(BussinessLogicConstants.CookerRole))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="@BussinessLogicConstants.CookerArea" asp-controller="Home" asp-action="Index">@localizer[BussinessLogicConstants.CookerMessage]</a>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <partial name="_MessagesPartial" />
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer bg-light text-muted">
        <div class="container">
            <div class="row">
                <div class="col-xl-9 text-center">
                    &copy; 2021 - Lo stabilimento - <a asp-area="" asp-controller="Home" asp-action="Privacy">@localizer[BussinessLogicConstants.PrivacyMessage]</a>
                </div>
                <div class="col-xl-3">
                    <partial name="_selectLanguagePartial" />
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/fontawesome-free-5.13.0-web/fontawesome-free-5.13.0-web/js/all.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/cart.js"></script>
    <script src="~/js/search.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
